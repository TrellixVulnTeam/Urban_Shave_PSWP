<%- include("partials/header"); -%>

    <h1>Book Now! center align</h1>

    <div class="register"> 
      <h4>Add cart</h4>

      <h4 class="accountWelcome">Have an account with us? <a href="/login">Sign in</a></h4>
    
    </div>
    
    <div class="serviceNames">

      <h2>Services</h2>

      <ul>
        <li>Haircut</li>
        <li>Beard</li>
        <li>Wax</li>
      </ul>
  </div>

  <div class="staff">

    <h2>Stylists</h2>

    <% staffDisplayed.forEach(function(staff){ %>
      <p><%= staff.firstName %></p>
    <% }); %>

</div>

<div class="serviceOrder">

  <div class="orderFor"></div>

  <h2>Who are you booking for?</h2>

  <select name="bookFor" id="for">
    <option value="myself">Myself</option>
    <option value="family">Family Member</option>
  </select>

  <h2>Who would you like to book with?</h2>

  <select name="bookFor" id="staffBooked">
    <% staffDisplayed.forEach(function(staff){ %>
    <option><%= staff.firstName %></option>
    <% }); %>
  </select>

  <div class="ordered">

    <h3>Haircut</h3>
    <p>Our experts stylists will consult and deliver a precision haircut.</p>
    <p>20min - 30min</p>
    <p>$21.00</p>

    <h3>Beard</h3>
    <p>Let us style and tame that unruly beard.</p>
    <p>15min - 25min</p>
    <p>$15.00</p>

    <h3>Wax</h3>
    <p>Got unwanted hair? We can take care of that.</p>
    <p>10min - 20min</p>
    <p>$10.00</p>

    <h3>Style</h3>
    <p>Let's prefect your unique look or help give you a new one</p>
    <p>10min - 15min</p>
    <p>$10.00</p>

    <h3>Color</h3>
    <p>Tackle unwanted gray hair.</p>
    <p>20min - 30min</p>
    <p>$15.00</p>
  </div>



</div>


